<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breeze.js">
            <arguments>
                <argument name="bundles" xsi:type="array">
                    <!-- Use separate bundle because swiper lib is very big -->
                    <item name="swiper" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <item name="Swissup_Swiper/js/swiper" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_Swiper/js/breeze/swiper</item>
                                <item name="import" xsi:type="array">
                                    <item name="lib" xsi:type="string">Swissup_Swiper/lib/swiper</item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
