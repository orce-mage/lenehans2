<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Amasty_Stockstatus::config" title="Amasty: Custom Stock Status" sortOrder="32119" />
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Catalog::catalog">
                    <resource id="Amasty_Stockstatus::stockstatus" title="Amasty Custom Stock Status" translate="title" sortOrder="10">
                        <resource id="Amasty_Stockstatus::rule" title="Manage Custom Stock Status Rules" translate="title" sortOrder="10">
                            <resource id="Amasty_Stockstatus::ruleenable" title="Mass Enable Custom Stock Status Rules" translate="title" sortOrder="10" />
                            <resource id="Amasty_Stockstatus::ruledisable" title="Mass Disable Custom Stock Status Rules" translate="title" sortOrder="20" />
                            <resource id="Amasty_Stockstatus::ruleduplicate" title="Mass Duplicate Custom Stock Status Rules" translate="title" sortOrder="30" />
                            <resource id="Amasty_Stockstatus::ruledelete" title="Mass Delete Custom Stock Status Rules" translate="title" sortOrder="40" />
                            <resource id="Amasty_Stockstatus::edit" title="Edit Custom Stock Status Rule" translate="title" sortOrder="50" />
                            <resource id="Amasty_Stockstatus::new" title="Create Custom Stock Status Rule" translate="title" sortOrder="60" />
                            <resource id="Amasty_Stockstatus::delete" title="Delete Custom Stock Status Rule" translate="title" sortOrder="70" />
                            <resource id="Amasty_Stockstatus::duplicate" title="Duplicate Custom Stock Status Rule" translate="title" sortOrder="80" />
                            <resource id="Amasty_Stockstatus::advanced" title="Edit Additional Stockstatus Settings" translate="title" sortOrder="90" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
