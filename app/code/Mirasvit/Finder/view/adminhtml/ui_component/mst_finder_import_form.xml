<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" component="Magento_Customer/js/form/components/form">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">mst_finder_import_form.mst_finder_import_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Import</item>
        <item name="reverseMetadataMerge" xsi:type="boolean">true</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="cancel" class="Mirasvit\Finder\Ui\Import\Form\Control\BackButton"/>
            <button name="save" class="Mirasvit\Finder\Ui\Import\Form\Control\SaveButton"/>
        </buttons>
        <namespace>mst_finder_import_form</namespace>
        <ajaxSave>true</ajaxSave>
        <ajaxSaveType>simple</ajaxSaveType>
        <dataScope>data</dataScope>
        <deps>
            <dep>mst_finder_import_form.mst_finder_import_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="mst_finder_import_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="mst_finder/import/start"/>
        </settings>
        <aclResource>Mirasvit_Finder::finder</aclResource>
        <dataProvider class="Mirasvit\Finder\Ui\Import\Form\DataProvider" name="mst_finder_import_form_data_source">
            <settings>
                <requestFieldName>option_id</requestFieldName>
                <primaryFieldName>option_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <container name="messages" component="Magento_Ui/js/form/components/html">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="additionalClasses" xsi:type="string">message message-error</item>
                <item name="visible" xsi:type="boolean">false</item>
                <item name="imports" xsi:type="array">
                    <item name="responseData" xsi:type="string">${ $.parentName }:responseData</item>
                </item>
                <item name="listens" xsi:type="array">
                    <item name="responseData.error" xsi:type="string">visible</item>
                    <item name="responseData.messages" xsi:type="string">content</item>
                </item>
            </item>
        </argument>
    </container>
    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="is_collection" xsi:type="boolean">true</item>
            </item>
        </argument>
        <settings>
            <label/>
            <dataScope/>
        </settings>

        <htmlContent name="import_example">
            <block name="html_content_block" class="Magento\Backend\Block\Template">
                <arguments>
                    <argument name="template" xsi:type="string">Mirasvit_Finder::import/example.phtml</argument>
                </arguments>
            </block>
        </htmlContent>

        <field name="option_id" formElement="hidden">
            <settings>
                <dataType>text</dataType>
            </settings>
        </field>
        <field name="import_file">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string"></item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="formElement" xsi:type="string">fileUploader</item>
                    <item name="allowedExtensions" xsi:type="string">csv</item>
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="url" path="mst_finder/import/upload"/>
                    </item>
                </item>
            </argument>

            <settings>
                <imports>
                    <link name="uploaderConfig.formData.finder_id">${ $.provider }:data.finder_id</link>
                </imports>
            </settings>
        </field>

        <field name="import_mode" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">overwrite</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Mode</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Mirasvit\Finder\Ui\Import\Form\Field\Mode"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>
