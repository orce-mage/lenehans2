<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.stock.sku">
            <block class="Magento\Framework\View\Element\Template" name="product.info.delivery.message" template="MidoriWeb_Custom::product/delivery_message.phtml" after="product.info.type">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="midoriweb.delivery-message" xsi:type="array">
                                <item name="component" xsi:type="string">MidoriWeb_Custom/js/view/product/delivery-message</item>
                                <item name="template" xsi:type="string">MidoriWeb_Custom/product/delivery-message</item>
                                <item name="dataScope" xsi:type="string">midoriweb.delivery-message</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
